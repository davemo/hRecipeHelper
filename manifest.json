{
  // Required
  "name": "hRecipe Helper",
  "version": "1.0",

  // Recommended
  "description": "Tool to help insert hRecipe formated recipes into your blog.",
 // "icons": { "recipeCard.gif"},

  "background_page": "background.html",
  "browser_action": {
    "default_icon": "recipeCard.gif",
    "popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": [ "jquery-1.4.2.min.js","content_script.js"]
    }
  ],
  "permissions": [
	"tabs",    
	"http://*/*",
	"https://*/*"
  ]	
}
